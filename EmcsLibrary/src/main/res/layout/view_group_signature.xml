<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_signature_view_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_signature_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_signature_view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_signature_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dimen_8_dp"
                android:freezesText="true"
                android:text="Title Name"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_medium" />

            <ImageView
                android:id="@+id/img_signature_view_require"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/txt_signature_view_title"
                app:srcCompat="@drawable/vector_required_field" />

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/frame_signature_view_layout_2"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/shape_signature_normal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_signature_view_signature"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/vector_create" />

        </FrameLayout>

    </LinearLayout>

</FrameLayout>