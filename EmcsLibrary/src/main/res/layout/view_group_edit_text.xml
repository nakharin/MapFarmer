<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_edit_text_view_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_edit_text_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_edit_text_view_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_edit_text_view_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="@dimen/dimen_8_dp"
                android:freezesText="true"
                android:text="Title Name"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_medium" />

            <ImageView
                android:id="@+id/img_edit_text_view_require"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/txt_edit_text_view_title"
                app:srcCompat="@drawable/vector_required_field" />

        </RelativeLayout>

        <EditText
            android:id="@+id/edt_edit_text_view_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_text_normal"
            android:textColor="@color/colorGrayLV1" />

        <LinearLayout
            android:id="@+id/linear_edit_text_view_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_edit_text_view_helper"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:freezesText="true"
                android:maxLines="2"
                android:minLines="1"
                android:text="@string/str_edt_helper"
                android:textColor="@color/colorGrayLV3"
                android:textSize="@dimen/size_14_sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_edit_text_view_error"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:freezesText="true"
                android:gravity="right"
                android:maxLines="3"
                android:minLines="1"
                android:textColor="@color/colorRed"
                android:textSize="@dimen/size_14_sp"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>