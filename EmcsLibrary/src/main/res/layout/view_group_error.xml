<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/error_view_frame_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGrayLV6">

    <LinearLayout
        android:id="@+id/error_view_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dimen_32_dp">

        <ImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/error_view_img_error"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:tint="@color/colorRed"
            app:srcCompat="@drawable/vector_error" />

        <TextView
            android:id="@+id/error_view_txt_error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_16_dp"
            android:layout_marginTop="@dimen/dimen_16_dp"
            android:freezesText="true"
            android:gravity="center"
            android:text="@string/str_server_error"
            android:textColor="@color/colorGrayLV3"
            android:textSize="@dimen/text_medium" />

        <Button
            android:id="@+id/error_view_btn_try_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/str_try_again"
            android:textColor="@color/colorRed" />

    </LinearLayout>

</FrameLayout>